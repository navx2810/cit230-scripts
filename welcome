name=$(whoami)
dayOfWeek=$(date +%u)
day=""
device=$(hostname)
case $dayOfWeek in
	1)
		day="Monday"
		;;
	2)
		day="Tuesday"
		;;
	3)
		day="Wednesday"
		;;
	4)
		day="Thursday"
		;;
	5)
		day="Friday"
		;;
	6)
		day="Saturday"
		;;
	7)
		day="Sunday"
		;;

esac

echo "$name, welcome to $device"
echo "Today is $day."
echo "You are current located in directory: $(pwd)"
echo "Enjoy your day!"
